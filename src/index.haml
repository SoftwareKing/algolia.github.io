!!! 5
%head
  %meta{charset: "UTF-8"}
  %title Algolia SuperSearch with instantsearch.js
  %link{href: "app.css", rel: "stylesheet", type: "text/css"}
  %link{href: "https://fonts.googleapis.com/css?family=Exo+2:400,800", rel: "stylesheet", type: "text/css"}
  %link{rel:"icon", type: "image/x-icon", href:"favicon.ico"}
  %meta{name: "description", content:"Find and watch every commercial ever aired during the Big Game with Algolia Super Search"}
  %meta{name: "viewport", content:"width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"}
  -# twitter
  %meta{name: "twitter:card", content: "summary_large_image"}
  %meta{name: "twitter:site", content: "@Algolia"}
  %meta{name: "twitter:creator", content: "@Algolia"}
  -# og
  %meta{property: "og:url", content: "https://community.algolia.com/supersearch/"}
  %meta{property: "og:title", content: "Algolia SuperSearch"}
  %meta{property: "og:description", content: "Find and watch every commercial ever aired during the Big Game with Algolia Super Search"}
  %meta{property: "og:image", content: "https://community.algolia.com/supersearch/img/og_screen.png"}
  -# ios
  -# todo: fix youtube player
  -# %meta{name:"apple-mobile-web-app-capable", content:"yes"}
  -# %meta{name:"apple-mobile-web-app-title", content:"Algolia - Super Search Ads"}
  -# %meta{name:"apple-mobile-web-app-status-bar-style", content:"black"}

%body
  .container-fluid
    %a.github-source{href: "https://github.com/algolia/supersearch"}
      %svg
        %use{xlink:href: "#github-banner"}
    %header
      .please-be-kind
        %ul.social-links
          %li
            %a{href: "https://www.producthunt.com/tech/algolia-supersearch", target: "_blank"}
              .pulse
              %svg{role: "img"}
                %use{xlink:href: "#icon-producthunt"}
          %li
            %a.share-link{href: "#facebook"}
              .pulse
              %svg{role: "img"}
                %use{xlink:href: "#icon-facebook"}
          %li
            %a.share-link{href: "#twitter"}
              .pulse
              %svg{role: "img"}
                %use{xlink:href: "#icon-twitter"}
      %h1
        %a{href: "https://community.algolia.com/supersearch/"}
          %img{src: "img/logo-supersearch.svg", alt: "Super Search Commercials search by Algolia"}
      %form.searchbox.sbx-custom{name: "searchquery", novalidate: true, onsubmit: "return false;"}
        %input#search.sbx-custom__input{type: "search", placeholder: "Search for a commercial", autocomplete: "off", required: true, spellcheck: false}
        %button.sbx-custom__submit{type: "submit"}
          %svg{role: "img", aria-label: "Search"}
            %use{xlink:href: "#sbx-icon-search-6"}
        %button.sbx-custom__reset{type: "reset"}
          %svg{role: "img", aria-label: "Reset"}
            %use{xlink:href: "#sbx-icon-clear-3"}
        %button.sbx-custom__filters{type: "button"}
          %svg{role: "img", aria-label: "Search"}
            %use{xlink:href: "#icon-filters"}
          %span filters

      %script#hit-template{type: "text/template"}
        %a.hit{href: "https://www.youtube.com/watch?v={{objectID}}", data-yt: "{{objectID}}", data-brand: "{{brand}}"}
          %img.hide{src: "https://res.cloudinary.com/hilnmyskv/image/fetch/w_480,h_360,q_70,c_fill,f_auto/{{thumbnails.high.url}}"}
          .hit-brand {{{_highlightResult.brand.value}}}
          .hit-name {{{_highlightResult.ad_name.value}}}
          .hit-season {{year}} - {{sbYear}}
          .hit-tag {{{ matchedTag }}}

    %main
      %section#topbar-results-control
        #refinements
      %section#results
      %section#pagination
      %span.poweredby Made with
        %span.KOOL
          %svg{role: "img", aria-label: "LOVE"}
            %use{xlink:href: "#icon-heart"}
         by
         %a.algolia{href: "https://www.algolia.com"} Algolia
         with
         %a.instantsearch{href: "https://community.algolia.com/instantsearch.js/"} Instantsearch.js

  .lightbox.hidden
    %a.close{href: "javascript:void(0);"}
      %svg{role: "img"}
        %use{xlink:href: "#sbx-icon-clear-2"}
    .lightbox_frame_wrapper
    .lightbox_sharing
      %ul.social-links
        %li Share this commercial
        %li
          %a.share-video{href: "#facebook"}
            .pulse
            %svg{role: "img"}
              %use{xlink:href: "#icon-facebook"}
        %li
          %a.share-video{href: "#twitter"}
            .pulse
            %svg{role: "img"}
              %use{xlink:href: "#icon-twitter"}

  .filters-panel.hide.overlay
    %button.close{type: "button"} BACK
    .overlay-content
      %ul.filters
        %li
          %ul.tabs
            %li
              %a.active{href: "#years"} Years
              %a{href: "#brands"} Brands
      #years.tab-panel.active
      #brands.tab-panel

  %script{src: "js/app.js"}
  -# <!-- inject:js --><!-- endinject -->

  .svg-icons{style: "height: 0; width: 0; position: absolute; visibility: hidden"}
    <!-- inject:svg --><!-- endinject -->
